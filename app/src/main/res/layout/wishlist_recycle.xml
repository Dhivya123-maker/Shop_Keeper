<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f9fa">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/deal_bg"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/deal_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="6dp">




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
              >

                <ImageView
                    android:id="@+id/fav_img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="1dp"
                    android:src="@drawable/fav" />

                <ImageView
                    android:id="@+id/wish_img"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/one">

                </ImageView>

            <LinearLayout
                android:layout_width="33dp"
                android:layout_height="18dp"
                android:background="@drawable/add_btn_bg"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_baseline_star_24">

                </ImageView>

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="4.3"
                    android:textColor="@color/white"
                    android:textSize="8dp">

                </TextView>
            </LinearLayout>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/wish_p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Asen"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_medium"
           />

        <TextView
            android:id="@+id/brand_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Women's Ruby Cotton Printed Straight Kurta"
            android:textColor="#555555"
            android:textSize="11dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:src="@drawable/rupees"/>

            <TextView
                android:id="@+id/price_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="13dp"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/strike_text"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#777777"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/offer_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="(45% off)"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#0099FF"
                android:textSize="11dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>