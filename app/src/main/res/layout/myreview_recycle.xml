<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/second_lnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cart_bg"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:elevation="5dp">


        <LinearLayout
            android:id="@+id/name_lnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/saree"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingStart="15dp">


            <TextView
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Women's Ruby Cotton Printed"
                android:textSize="13dp">

            </TextView>

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Brand : Vaamsi"
                android:textColor="#3A3838"
                android:textSize="12dp">

            </TextView>


            <LinearLayout
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rupees"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="450"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/strike_text"
                    android:textColor="#777777"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="(45% off)"
                    android:textColor="#0099FF"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/golden_star" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="4.3"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_lnr"
            android:paddingStart="15dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
          >


            <TextView
                android:id="@+id/review_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Review"
                android:textColor="#27AE60"
                android:textSize="13dp">

            </TextView>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_txt"
                android:fontFamily="@font/poppins_regular"
                android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demon trate the visual form of a document"
                android:textColor="#3A3838"
                android:textSize="11dp">

            </TextView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/saree"
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/pink_dress" />




        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/relate"
            android:layout_marginTop="5dp"
            android:background="#57C3BABA"


            >

        </View>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/cart_bg1"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#1976D2"
            android:text="Edit"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/btn_bg"
            android:textAllCaps="false">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#DE0404"
            android:text="Delete"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/btn_bg1"
            android:textAllCaps="false">

        </Button>

    </LinearLayout>


</LinearLayout>