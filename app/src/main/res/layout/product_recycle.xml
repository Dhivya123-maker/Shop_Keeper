<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
        android:background="@drawable/deal_bg"
        android:backgroundTint="#F5F8FA"
        android:elevation="1dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        >




        <RelativeLayout
            android:id="@+id/div1"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/fav_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:elevation="1dp"
                android:src="@drawable/little_heart" />

            <ImageView
                android:id="@+id/wish_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/one">

            </ImageView>

            <LinearLayout
                android:layout_width="33dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/add_btn_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_baseline_star_24">

                </ImageView>

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="4.3"
                    android:textColor="@color/white"
                    android:textSize="8dp">

                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/wish_p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Asen"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/brand_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wish_p_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_regular"
            android:text="Women's Ruby Cotton Printed Straight Kurta"
            android:textColor="#555555"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/brand_wish"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:src="@drawable/rupees"/>
            <TextView
                android:id="@+id/price_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="13dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/strike_text"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#777777"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/offer_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="(45% off)"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#0099FF"
                android:textSize="11dp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>