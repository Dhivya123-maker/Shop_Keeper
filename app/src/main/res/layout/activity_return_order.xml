<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="15dp"
            android:text="Order Details">

        </TextView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/filter_btn2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg1"
                android:elevation="2dp">

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/green_cart" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f9fa">



            <RelativeLayout
                android:id="@+id/second_lnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/cart_bg"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:gravity="center">


                <LinearLayout
                    android:id="@+id/name_lnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toLeftOf="@id/dress_image"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">


                    <TextView
                        android:id="@+id/p_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Women's Ruby Cotton Printed"
                        android:textSize="13dp">

                    </TextView>

                    <TextView
                        android:id="@+id/brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Brand : Vaamsi"
                        android:textColor="#3A3838"
                        android:textSize="12dp">

                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rupees"/>
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_medium"
                            android:text="450"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/strike_text"
                            android:textColor="#777777"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="(45% off)"
                            android:textColor="#0099FF"
                            android:textSize="10dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Expected delivery on Fri,25th Mar 2022"
                        android:textColor="#27AE60"
                        android:textSize="11dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dress_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/saree"
                        android:layout_width="75dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/pink_dress" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Qty : 1"
                        android:textColor="@color/black"
                        android:textSize="11dp" />

                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/name_lnr"
                    android:layout_marginTop="10dp"
                    android:background="#57C3BABA"


                    >

                </View>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cancel_lnr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cart_bg1"
                android:backgroundTint="@color/white"
                android:layout_below="@id/second_lnr"
                android:elevation="5dp"
                >

                <Button
                    android:id="@+id/cancel_order_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#DE0404"
                    android:text="Return Order"
                    android:textSize="13dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false">

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#1976D2"
                    android:text="Give Review"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/btn_bg1"
                    android:textAllCaps="false">

                </Button>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancel_lnr"
                android:layout_marginTop="15dp">


                <LinearLayout
                    android:id="@+id/view_lnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view_order_placed"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/status_bg" />

                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:background="#1976D2">

                    </View>

                    <View
                        android:id="@+id/view_order_confirmed"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/status_bg" />

                    <View
                        android:id="@+id/con_divider"
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:background="#1976D2">

                    </View>

                    <View
                        android:id="@+id/view_order_processed"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/status_bg" />

                    <View
                        android:id="@+id/ready_divider"
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:background="#1976D2">

                    </View>

                    <View
                        android:id="@+id/view_order_pickup"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/status_bg" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toRightOf="@id/view_lnr"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Ordered"
                        android:textSize="12dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Fri,25th Mar 2022"
                        android:textSize="11dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/two"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toRightOf="@id/view_lnr"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Out for Delivery"
                        android:textSize="12dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/one"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toRightOf="@id/view_lnr"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Shipped"
                        android:textSize="12dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Expected by Fri,25th Mar 2022"
                        android:textSize="11dp">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/three"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toRightOf="@id/view_lnr"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Delivered"
                        android:textSize="12dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Item Yet to be delivered"
                        android:textSize="11dp">

                    </TextView>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relate"
                android:background="@drawable/deal_bg"
                android:backgroundTint="@color/white"
                android:elevation="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                android:paddingStart="15dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pdf_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Download invoice"
                    android:layout_gravity="center"
                    android:textColor="#1976D2"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins_regular">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_lnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/deal_bg"
                android:orientation="vertical"
                android:layout_below="@id/linearlayout"
                android:backgroundTint="@color/white"
                android:elevation="5dp"  >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Shipping Address"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13dp"
                        android:textColor="#15974C">

                    </TextView>


                    <TextView
                        android:id="@+id/cus_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Dharani M"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="75dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="12-4/10, Thandu mariyamman temple street,Junction main road, Tharamangalam, salem."
                        android:textSize="11dp">

                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/change_btn"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@drawable/add_btn_bg"
                        android:text="Change"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="normal">

                    </Button>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_lnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/deal_bg"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/first_lnr"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Product Details"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13dp"
                        android:textColor="#15974C">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Price"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="11dp"
                            android:layout_marginStart="10dp">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/rupees"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="449"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11dp"
                                >

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Discount"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="11dp"
                            android:layout_marginStart="10dp">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/rupees"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="100"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11dp"
                                >

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Delivery Charges"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="11dp"
                            android:layout_marginStart="10dp">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/rupees"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="11dp"
                                >

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/name_lnr"
                    android:layout_marginTop="10dp"
                    android:background="#57C3BABA"


                    >

                </View>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_bg1"
                    android:paddingStart="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Price"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        >

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="349"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12dp">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_lnr"
                android:layout_marginStart="23dp"

                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Payment Mode : "
                    android:textColor="#15974C"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Cash on Delivery : "
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/rupees"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="450"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>