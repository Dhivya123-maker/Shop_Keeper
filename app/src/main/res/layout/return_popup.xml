<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#BA232725"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bend"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Return Request"
            android:textColor="#15974C"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_medium"
          >

        </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason For Return"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#DE0404"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp" />
        </LinearLayout>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13dp"
            android:paddingStart="10dp"
            android:drawableEnd="@drawable/drop"
            android:paddingEnd="10dp"
            android:background="@drawable/edittext_border"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Comments"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/reason_edittext"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="1dp"
            android:paddingStart="10dp"
            android:textSize="12dp"
            android:hint="Enter a reason..."
            android:gravity="top"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/edittext_border"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Images"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/edittext_border">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/blue_add"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload"
                android:layout_marginTop="15dp"
                android:textColor="#1976D2"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/deal_bg"
                android:backgroundTint="@color/white"
                android:elevation="0.5dp"
                android:textColor="@color/black">


                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false">

                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="7dp"
                android:textSize="12dp"
                android:layout_weight="1"
                android:background="@drawable/deal_bg"
                android:backgroundTint="#1976D2"
                android:elevation="1dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white">

            </Button>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</LinearLayout>