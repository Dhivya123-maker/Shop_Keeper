<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Top_categories.Top_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Women Fashion"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/w"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/banner"

        />

            <TextView
                android:id="@+id/trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/categories"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="Trending"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Trending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/trend"
        />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sec_ban_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Trending"
                android:layout_marginTop="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sec_ban_recycle"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offer_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brand"
                />
            <TextView
                android:id="@+id/top_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/offer_recycle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="Top Rating"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rating_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_rate"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_rate_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating_recycle"
                />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>